{
	"semi": false,
	"trailingComma": "none",
	"singleQuote": true,
	"printWidth": 80,
	"useTabs": true,
	"jsxSingleQuote": true,
	"arrowParens": "avoid",
	"plugins": ["@trivago/prettier-plugin-sort-imports"],
	"importOrder": [
		"<THIRD_PARTY_MODULES>",
		"^@navigation/(.*)$",
		"^@providers/(.*)$",
		"^@constants/(.*)$",
		"^@screens/(.*)$",
		"^@assets/(.*)$",
		"^@types/(.*)$",
		"^@hooks/(.*)$",
		"^@ui/(.*)$",
		"^../(.*)$",
		"^./(.*)$"
	],
	"importOrderSeparation": true,
	"importOrderSortSpecifiers": true
}
