{
	"semi": false,
	"trailingComma": "none",
	"singleQuote": true,
	"printWidth": 80,
	"useTabs": true,
	"jsxSingleQuote": true,
	"arrowParens": "avoid",
	"importOrder": [
		"<THIRD_PARTY_MODULES>",
		"^@hooks/(.*)$",
		"^@navigation/(.*)$",
		"^@providers/(.*)$",
		"^@screens/(.*)$",
		"^@types/(.*)$",
		"^@ui/(.*)$",
		"^../(.*)$",
		"^./(.*)$"
	],
	"importOrderSeparation": true,
	"importOrderSortSpecifiers": true
}
